<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cyrilmottier.android.listviewtipsandtricks"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="4"
		android:targetSdkVersion="8" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name">
		
		<activity android:name=".HomeListActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".EmptyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyrilmottier.android.listviewtipsandtricks.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        
        <activity android:name=".SectionedListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyrilmottier.android.listviewtipsandtricks.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        
        <activity android:name=".FancyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyrilmottier.android.listviewtipsandtricks.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        
        <activity android:name=".AccessoriesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyrilmottier.android.listviewtipsandtricks.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".LargeTouchableAreasListActivity"
            android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyrilmottier.android.listviewtipsandtricks.SAMPLE_CODE" />
            </intent-filter>
        </activity>

	</application>
</manifest>